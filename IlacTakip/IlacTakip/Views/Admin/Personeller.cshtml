@model List<IlacTakip.Models.Personel>

@{
    ViewData["Title"] = "Personel Yönetimi";
}

<style>
/* Dashboard Content Layout - Same as Index */
.dashboard-content {
    padding: 2rem;
    min-height: 100vh;
}

@@media (max-width: 768px) {
    .dashboard-content {
        padding: 1rem;
    }
    
    .sidebar {
        left: -280px;
    }
}

/* Compact Page Header */
.page-header {
    background: var(--card-bg);
    border-radius: 8px;
    box-shadow: 0 2px 10px var(--shadow-light);
    margin-bottom: 2rem;
}

.page-header .card-body {
    padding: 1.5rem !important;
}

.page-title {
    font-size: 1.8rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.page-subtitle {
    color: var(--text-muted);
    font-size: 1rem;
}

/* Content Container */
.content-container {
    max-width: 100%;
    overflow-x: auto;
}

/* Table Responsive */
.table-container {
    background: var(--card-bg);
    border-radius: 8px;
    box-shadow: 0 2px 15px var(--shadow-light);
    overflow: hidden;
}

.table-container .card-header {
    padding: 1rem 1.5rem;
    background: var(--secondary-bg);
    color: #ffffff;
}

.table-container .card-body {
    padding: 0;
}

/* Responsive Table */
.table-responsive {
    border-radius: 12px;
    overflow: hidden;
    box-shadow: 0 4px 20px var(--shadow-light);
}

.table {
    margin-bottom: 0;
    background: #ffffff;
}

/* Statistics Cards Responsive */
.stats-row {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
    gap: 1rem;
    margin-top: 2rem;
}

.stat-mini-card {
    background: var(--card-bg);
    border-radius: 12px;
    padding: 1.5rem;
    text-align: center;
    box-shadow: 0 4px 20px var(--shadow-light);
    transition: all 0.3s ease;
    border-left: 4px solid;
}

.stat-mini-card:hover {
    transform: translateY(-3px);
    box-shadow: 0 8px 30px var(--shadow-medium);
}

.stat-mini-card.primary { border-left-color: #333333; }
.stat-mini-card.success { border-left-color: #28a745; }
.stat-mini-card.danger { border-left-color: #dc3545; }
.stat-mini-card.warning { border-left-color: #ffc107; }

.stat-mini-icon {
    font-size: 2rem;
    margin-bottom: 0.5rem;
}

.stat-mini-value {
    font-size: 1.5rem;
    font-weight: 700;
    margin-bottom: 0.25rem;
}

.stat-mini-label {
    font-size: 0.8rem;
    color: var(--text-muted);
    text-transform: uppercase;
    letter-spacing: 0.5px;
}

/* Mobile Card View */
@@media (max-width: 768px) {
    .table-responsive {
        display: none;
    }
    
    .mobile-cards {
        display: block;
    }
    
    .mobile-card {
        background: var(--card-bg);
        border-radius: 8px;
        padding: 1rem;
        margin-bottom: 1rem;
        box-shadow: 0 2px 8px var(--shadow-light);
        border-left: 4px solid var(--accent-color);
    }
    
    .mobile-card-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border-color);
    }
    
    .mobile-card-title {
        font-weight: 600;
        color: var(--text-primary);
        font-size: 1rem;
    }
    
    .mobile-card-info {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 0.5rem;
        margin-bottom: 0.75rem;
    }
    
    .mobile-info-item {
        display: flex;
        flex-direction: column;
        font-size: 0.85rem;
    }
    
    .mobile-info-label {
        color: var(--text-muted);
        font-size: 0.75rem;
        margin-bottom: 0.25rem;
    }
    
    .mobile-info-value {
        color: var(--text-primary);
        font-weight: 500;
    }
    
    .mobile-card-actions {
        display: flex;
        justify-content: flex-end;
        gap: 0.5rem;
    }
    
    .btn-mobile {
        padding: 0.5rem 1rem;
        font-size: 0.85rem;
        border-radius: 6px;
    }
}

@@media (min-width: 769px) {
    .mobile-cards {
        display: none;
    }
}

/* Mobile Responsive */
@@media (max-width: 576px) {
    .stats-row {
        grid-template-columns: repeat(2, 1fr);
        gap: 0.5rem;
    }
    
    .stat-mini-card {
        padding: 1rem;
    }
    
    .stat-mini-icon {
        font-size: 1.5rem;
    }
    
    .stat-mini-value {
        font-size: 1.2rem;
    }
}

/* Personnel Avatar */
.personnel-avatar {
    width: 40px;
    height: 40px;
    border-radius: 50%;
    background: var(--accent-color);
    color: #ffffff;
    display: flex;
    align-items: center;
    justify-content: center;
    font-weight: 600;
}
</style>

