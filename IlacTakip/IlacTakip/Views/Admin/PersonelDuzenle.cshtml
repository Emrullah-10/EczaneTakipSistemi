@model IlacTakip.ViewModels.PersonelDuzenleViewModel

@{
    ViewData["Title"] = "Personel Düzenle";
}

<style>
/* Dashboard Content Layout - Same as Index */
.dashboard-content {
    padding: 2rem;
    min-height: 100vh;
}

@@media (max-width: 768px) {
    .dashboard-content {
        padding: 1rem;
    }
    
    .sidebar {
        left: -280px;
    }
}

/* Form Container - Full Width Like Dashboard */
.form-container {
    width: 100%;
    margin: 0;
}

/* Page Header - Full Width Like Dashboard */
.page-header {
    margin-bottom: 2rem;
}

.page-header .card-body {
    padding: 2rem !important;
    text-align: center;
}

.page-title {
    font-size: 2rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.5rem;
}

.page-subtitle {
    color: var(--text-muted);
    font-size: 1rem;
}

/* Form Styling - Full Width Like Dashboard */
.form-card {
    background: var(--card-bg);
    border-radius: 12px;
    box-shadow: 0 4px 20px var(--shadow-light);
    border: none;
    width: 100%;
}

.form-card .card-header {
    background: var(--secondary-bg);
    color: #ffffff;
    border-bottom: 1px solid var(--border-color);
    padding: 1rem 1.25rem;
    font-size: 0.95rem;
}

.form-group {
    margin-bottom: 1.25rem;
}

.form-label {
    font-size: 0.9rem;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: 0.4rem;
}

.form-control {
    border: 1px solid var(--border-color);
    border-radius: 6px;
    padding: 0.6rem 0.75rem;
    font-size: 0.9rem;
    transition: all 0.3s ease;
    height: auto;
}

.form-control:focus {
    border-color: var(--accent-color);
    box-shadow: 0 0 0 0.15rem rgba(51, 51, 51, 0.2);
}

.form-control::placeholder {
    color: var(--text-muted);
    font-size: 0.85rem;
}

.btn-action {
    padding: 0.6rem 1.5rem;
    border-radius: 6px;
    font-weight: 500;
    font-size: 0.9rem;
    transition: all 0.3s ease;
}

.btn-action:hover {
    transform: translateY(-1px);
    box-shadow: 0 3px 10px var(--shadow-medium);
}

/* Responsive adjustments */
@@media (max-width: 992px) {
    .form-container {
        width: 100%;
    }
}

@@media (max-width: 576px) {
    .page-header .card-body {
        padding: 1rem !important;
    }
    
    .page-title {
        font-size: 1.5rem;
    }
    
    .form-card .card-body {
        padding: 1rem !important;
    }
    
    .btn-action {
        width: 100%;
        margin-bottom: 0.5rem;
    }
    
    .d-flex.gap-2 {
        flex-direction: column;
    }
}
</style>

<!-- Sidebar -->
<div class="sidebar">
    <div class="sidebar-header">
        <a href="@Url.Action("Index", "Home")" class="sidebar-brand">
            <i class="fas fa-hospital animate-float"></i>
            <span>Eczane Takip</span>
        </a>
    </div>
    
    <nav class="sidebar-menu">
        <ul style="list-style: none; padding: 0; margin: 0;">
            <li class="menu-item">
                <a href="@Url.Action("Index", "Admin")" class="menu-link">
                    <i class="fas fa-tachometer-alt menu-icon"></i>
                    <span>Dashboard</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Ilaclar", "Admin")" class="menu-link">
                    <i class="fas fa-pills menu-icon"></i>
                    <span>İlaçlar</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("IlacEkle", "Admin")" class="menu-link">
                    <i class="fas fa-plus-circle menu-icon"></i>
                    <span>İlaç Ekle</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Personeller", "Admin")" class="menu-link active">
                    <i class="fas fa-users menu-icon"></i>
                    <span>Personeller</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("PersonelEkle", "Admin")" class="menu-link">
                    <i class="fas fa-user-plus menu-icon"></i>
                    <span>Personel Ekle</span>
                </a>
            </li>
            <li class="menu-item" style="margin-top: 2rem; border-top: 1px solid #444; padding-top: 1rem;">
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button type="submit" class="menu-link" style="background: none; border: none; width: 100%; text-align: left;">
                        <i class="fas fa-sign-out-alt menu-icon"></i>
                        <span>Çıkış Yap</span>
                    </button>
                </form>
            </li>
        </ul>
    </nav>
</div>

<!-- Main Content -->
<div class="dashboard-content">
    <div class="form-container">
        <!-- Page Header -->
        <div class="page-header">
            <div class="card-body">
                <div class="animate-float mb-2">
                    <i class="fas fa-user-edit fa-2x text-primary"></i>
                </div>
                <h1 class="page-title">Personel Düzenle</h1>
                <p class="page-subtitle">@Model.Ad @Model.Soyad</p>
            </div>
        </div>

        <!-- Form Section -->
        <div class="card form-card">
            <div class="card-header">
                <h6 class="m-0 fw-bold">
                    <i class="fas fa-user me-2"></i>Personel Bilgileri
                </h6>
            </div>
            <div class="card-body p-3">
                <form asp-action="PersonelDuzenle" method="post">
                    <input asp-for="Id" type="hidden" />
                    
                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Ad" class="form-label fw-bold">
                                <i class="fas fa-user me-1 text-primary"></i>Ad
                            </label>
                            <input asp-for="Ad" class="form-control" placeholder="Adını giriniz" />
                            <span asp-validation-for="Ad" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Soyad" class="form-label fw-bold">
                                <i class="fas fa-user me-1 text-primary"></i>Soyad
                            </label>
                            <input asp-for="Soyad" class="form-control" placeholder="Soyadını giriniz" />
                            <span asp-validation-for="Soyad" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="TcKimlikNo" class="form-label fw-bold">
                                <i class="fas fa-id-card me-1 text-primary"></i>TC Kimlik No
                            </label>
                            <input asp-for="TcKimlikNo" class="form-control" maxlength="11" placeholder="11 haneli TC numarası" />
                            <span asp-validation-for="TcKimlikNo" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Telefon" class="form-label fw-bold">
                                <i class="fas fa-phone me-1 text-primary"></i>Telefon
                            </label>
                            <input asp-for="Telefon" class="form-control" placeholder="05XX XXX XX XX" />
                            <span asp-validation-for="Telefon" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Email" class="form-label fw-bold">
                                <i class="fas fa-envelope me-1 text-primary"></i>Email
                            </label>
                            <input asp-for="Email" class="form-control" type="email" placeholder="email@domain.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="Pozisyon" class="form-label fw-bold">
                                <i class="fas fa-briefcase me-1 text-primary"></i>Pozisyon
                            </label>
                            <input asp-for="Pozisyon" class="form-control" placeholder="Eczacı, Tekniker, vs." />
                            <span asp-validation-for="Pozisyon" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="Maas" class="form-label fw-bold">
                                <i class="fas fa-money-bill me-1 text-primary"></i>Maaş
                            </label>
                            <input asp-for="Maas" class="form-control" type="number" step="0.01" placeholder="0.00" />
                            <span asp-validation-for="Maas" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <label asp-for="IseBaslamaTarihi" class="form-label fw-bold">
                                <i class="fas fa-calendar-check me-1 text-primary"></i>İşe Başlama Tarihi
                            </label>
                            <input asp-for="IseBaslamaTarihi" class="form-control" type="date" />
                            <span asp-validation-for="IseBaslamaTarihi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-md-6 form-group">
                            <label asp-for="IsSonaErmeTarihi" class="form-label fw-bold">
                                <i class="fas fa-calendar-times me-1 text-primary"></i>İş Sona Erme Tarihi
                            </label>
                            <input asp-for="IsSonaErmeTarihi" class="form-control" type="date" />
                            <span asp-validation-for="IsSonaErmeTarihi" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 form-group">
                            <div class="form-check mt-4 pt-2">
                                <input asp-for="AktifMi" class="form-check-input" type="checkbox" />
                                <label asp-for="AktifMi" class="form-check-label fw-bold">
                                    <i class="fas fa-toggle-on me-1 text-primary"></i>Aktif Personel
                                </label>
                            </div>
                            <span asp-validation-for="AktifMi" class="text-danger"></span>
                        </div>
                    </div>

                    <div class="form-group">
                        <label asp-for="Adres" class="form-label fw-bold">
                            <i class="fas fa-map-marker-alt me-1 text-primary"></i>Adres
                        </label>
                        <textarea asp-for="Adres" class="form-control" rows="3" placeholder="Tam adres bilgisini giriniz..."></textarea>
                        <span asp-validation-for="Adres" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <div class="d-flex gap-2 justify-content-end">
                            <a asp-action="Personeller" class="btn btn-secondary btn-action">
                                <i class="fas fa-arrow-left me-2"></i>Geri Dön
                            </a>
                            <button type="submit" class="btn btn-primary btn-action">
                                <i class="fas fa-save me-2"></i>Güncelle
                            </button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    
    <script>
        // Add entrance animations
        document.addEventListener('DOMContentLoaded', function() {
            const formCard = document.querySelector('.form-card');
            if (formCard) {
                formCard.classList.add('animate-fadeInUp');
            }
        });
    </script>
} 