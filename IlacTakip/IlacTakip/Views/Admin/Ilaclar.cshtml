<!-- Main Content -->
<div class="dashboard-content">
    <!-- Page Header -->
    <div class="page-header">
        <div class="card-body">
            <div class="d-flex align-items-center justify-content-between flex-column flex-md-row">
                <div class="d-flex align-items-center mb-2 mb-md-0">
                    <div class="animate-float me-3">
                        <i class="fas fa-pills fa-2x text-primary"></i>
                    </div>
                    <div>
                        <h1 class="page-title mb-0">İlaç Yönetimi</h1>
                        <p class="page-subtitle mb-0">Eczane ilaç stoklarını yönetin</p>
                    </div>
                </div>
                <div>
                    <a href="@Url.Action("IlacEkle", "Admin")" class="btn btn-primary btn-sm">
                        <i class="fas fa-plus me-1"></i>Yeni İlaç
                    </a>
                </div>
            </div>
        </div>
    </div>

    <!-- Main Content -->
    <div class="content-container">
        <div class="table-container">
            <div class="card-header d-flex flex-column flex-md-row justify-content-between align-items-start align-items-md-center gap-2">
                <h6 class="m-0 fw-bold">
                    <i class="fas fa-list me-2"></i>İlaç Listesi
                </h6>
                <a href="@Url.Action("IlacEkle")" class="btn btn-primary btn-sm">
                    <i class="fas fa-plus me-1"></i>Yeni İlaç Ekle
                </a>
            </div>
            <div class="card-body">
                    @if (TempData["SuccessMessage"] != null)
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <i class="fas fa-check-circle me-2"></i>@TempData["SuccessMessage"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                        </div>
                    }

                    @if (Model.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th><i class="fas fa-prescription-bottle me-1"></i>İlaç Adı</th>
                                        <th class="d-none d-md-table-cell"><i class="fas fa-money-bill me-1"></i>Fiyat</th>
                                        <th><i class="fas fa-boxes me-1"></i>Stok</th>
                                        <th class="d-none d-lg-table-cell"><i class="fas fa-barcode me-1"></i>Barkod</th>
                                        <th class="d-none d-xl-table-cell"><i class="fas fa-calendar-times me-1"></i>Son Kullanma</th>
                                        <th class="d-none d-xl-table-cell"><i class="fas fa-calendar-plus me-1"></i>Eklenme Tarihi</th>
                                        <th><i class="fas fa-cogs me-1"></i>İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var ilac in Model)
                                    {
                                        <tr class="animate-fadeInUp">
                                            <td>
                                                <div class="d-flex align-items-center">
                                                    <div class="me-2">
                                                        <i class="fas fa-pills fa-lg text-primary"></i>
                                                    </div>
                                                    <div>
                                                        <strong class="text-primary">@ilac.Ad</strong>
                                                        @if (!string.IsNullOrEmpty(ilac.Aciklama))
                                                        {
                                                            <br><small class="text-muted d-none d-md-block">@ilac.Aciklama</small>
                                                        }
                                                        <!-- Mobile Info -->
                                                        <div class="d-md-none">
                                                            <small class="text-success fw-bold">@ilac.Fiyat.ToString("C")</small>
                                                        </div>
                                                    </div>
                                                </div>
                                            </td>
                                            <td class="d-none d-md-table-cell">
                                                <span class="fw-bold text-success">@ilac.Fiyat.ToString("C")</span>
                                            </td>
                                            <td>
                                                @if (ilac.StokMiktari < 10)
                                                {
                                                    <span class="badge bg-danger">
                                                        <i class="fas fa-exclamation-triangle me-1"></i>@ilac.StokMiktari
                                                    </span>
                                                }
                                                else if (ilac.StokMiktari < 50)
                                                {
                                                    <span class="badge bg-warning">
                                                        <i class="fas fa-exclamation me-1"></i>@ilac.StokMiktari
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check me-1"></i>@ilac.StokMiktari
                                                    </span>
                                                }
                                            </td>
                                            <td class="d-none d-lg-table-cell">
                                                @if (!string.IsNullOrEmpty(ilac.BarkodNumarasi))
                                                {
                                                    <code class="text-muted">@ilac.BarkodNumarasi</code>
                                                }
                                                else
                                                {
                                                    <span class="text-muted">-</span>
                                                }
                                            </td>
                                            <td class="d-none d-xl-table-cell">
                                                @if (ilac.SonKullanmaTarihi.HasValue)
                                                {
                                                    var tarih = ilac.SonKullanmaTarihi.Value;
                                                    var gunKaldi = (tarih - DateTime.Now).Days;
                                                    
                                                    if (gunKaldi < 0)
                                                    {
                                                        <span class="text-danger fw-bold">
                                                            <i class="fas fa-times-circle me-1"></i>
                                                            @tarih.ToString("dd.MM.yyyy")
                                                            <br><small>(Süresi geçmiş)</small>
                                                        </span>
                                                    }
                                                    else if (gunKaldi < 30)
                                                    {
                                                        <span class="text-warning fw-bold">
                                                            <i class="fas fa-clock me-1"></i>
                                                            @tarih.ToString("dd.MM.yyyy")
                                                            <br><small>(@gunKaldi gün kaldı)</small>
                                                        </span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-success">
                                                            <i class="fas fa-check-circle me-1"></i>
                                                            @tarih.ToString("dd.MM.yyyy")
                                                        </span>
                                                    }
                                                }
                                                else
                                                {
                                                    <span class="text-muted">
                                                        <i class="fas fa-question-circle me-1"></i>
                                                        Belirtilmemiş
                                                    </span>
                                                }
                                            </td>
                                            <td class="d-none d-xl-table-cell">
                                                <span class="text-muted">@ilac.OlusturmaTarihi.ToString("dd.MM.yyyy")</span>
                                            </td>
                                            <td>
                                                <button type="button" class="btn btn-danger btn-sm" 
                                                        onclick="confirmDelete(@ilac.Id, '@ilac.Ad')">
                                                    <i class="fas fa-trash"></i>
                                                    <span class="d-none d-md-inline ms-1">Sil</span>
                                                </button>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>

                        <!-- Mobile Cards View -->
                        <div class="mobile-cards">
                            @foreach (var ilac in Model)
                            {
                                <div class="mobile-card">
                                    <div class="mobile-card-header">
                                        <div class="mobile-card-title">
                                            <i class="fas fa-pills me-2 text-primary"></i>@ilac.Ad
                                        </div>
                                        <div class="mobile-card-actions">
                                            <button type="button" class="btn btn-danger btn-mobile" 
                                                    onclick="confirmDelete(@ilac.Id, '@ilac.Ad')">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>
                                    </div>
                                    
                                    <div class="mobile-card-info">
                                        <div class="mobile-info-item">
                                            <div class="mobile-info-label">Fiyat</div>
                                            <div class="mobile-info-value text-success fw-bold">@ilac.Fiyat.ToString("C")</div>
                                        </div>
                                        <div class="mobile-info-item">
                                            <div class="mobile-info-label">Stok</div>
                                            <div class="mobile-info-value">
                                                @if (ilac.StokMiktari < 10)
                                                {
                                                    <span class="badge bg-danger">@ilac.StokMiktari</span>
                                                }
                                                else if (ilac.StokMiktari < 50)
                                                {
                                                    <span class="badge bg-warning">@ilac.StokMiktari</span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-success">@ilac.StokMiktari</span>
                                                }
                                            </div>
                                        </div>
                                        @if (!string.IsNullOrEmpty(ilac.BarkodNumarasi))
                                        {
                                            <div class="mobile-info-item">
                                                <div class="mobile-info-label">Barkod</div>
                                                <div class="mobile-info-value">
                                                    <code class="text-muted">@ilac.BarkodNumarasi</code>
                                                </div>
                                            </div>
                                        }
                                        @if (ilac.SonKullanmaTarihi.HasValue)
                                        {
                                            <div class="mobile-info-item">
                                                <div class="mobile-info-label">Son Kullanma</div>
                                                <div class="mobile-info-value">
                                                    @{
                                                        var tarih = ilac.SonKullanmaTarihi.Value;
                                                        var gunKaldi = (tarih - DateTime.Now).Days;
                                                    }
                                                    @if (gunKaldi < 0)
                                                    {
                                                        <span class="text-danger fw-bold">@tarih.ToString("dd.MM.yyyy")</span>
                                                    }
                                                    else if (gunKaldi < 30)
                                                    {
                                                        <span class="text-warning fw-bold">@tarih.ToString("dd.MM.yyyy")</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="text-success">@tarih.ToString("dd.MM.yyyy")</span>
                                                    }
                                                </div>
                                            </div>
                                        }
                                    </div>
                                    
                                    @if (!string.IsNullOrEmpty(ilac.Aciklama))
                                    {
                                        <div class="mt-2">
                                            <small class="text-muted">@ilac.Aciklama</small>
                                        </div>
                                    }
                                </div>
                            }
                        </div>

                        <!-- Statistics Cards -->
                        <div class="stats-row">
                            <div class="stat-mini-card primary">
                                <div class="stat-mini-icon text-primary">
                                    <i class="fas fa-pills"></i>
                                </div>
                                <div class="stat-mini-value text-primary">@Model.Count</div>
                                <div class="stat-mini-label">Toplam İlaç</div>
                            </div>
                            <div class="stat-mini-card success">
                                <div class="stat-mini-icon text-success">
                                    <i class="fas fa-boxes"></i>
                                </div>
                                <div class="stat-mini-value text-success">@Model.Sum(i => i.StokMiktari)</div>
                                <div class="stat-mini-label">Toplam Stok</div>
                            </div>
                            <div class="stat-mini-card warning">
                                <div class="stat-mini-icon text-warning">
                                    <i class="fas fa-exclamation-triangle"></i>
                                </div>
                                <div class="stat-mini-value text-warning">@Model.Count(i => i.StokMiktari < 10)</div>
                                <div class="stat-mini-label">Düşük Stok</div>
                            </div>
                            <div class="stat-mini-card info">
                                <div class="stat-mini-icon text-info">
                                    <i class="fas fa-money-bill-wave"></i>
                                </div>
                                <div class="stat-mini-value text-info">@Model.Where(i => i.Fiyat > 0).Sum(i => i.Fiyat * i.StokMiktari).ToString("C")</div>
                                <div class="stat-mini-label">Toplam Değer</div>
                            </div>
                        </div>
                    }
                    else
                    {
                        <!-- Empty State -->
                        <div class="text-center py-5">
                            <div class="animate-float mb-4">
                                <i class="fas fa-pills fa-5x text-muted"></i>
                            </div>
                            <h4 class="text-muted mb-3">Henüz ilaç eklenmemiş</h4>
                            <p class="text-muted mb-4">İlk ilacınızı ekleyerek stok yönetimine başlayın.</p>
                            <a href="@Url.Action("IlacEkle")" class="btn btn-primary btn-lg">
                                <i class="fas fa-plus me-2"></i>İlk İlacı Ekle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">
                    <i class="fas fa-exclamation-triangle text-warning me-2"></i>
                    İlacı Sil
                </h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div class="text-center mb-3">
                    <i class="fas fa-trash fa-3x text-danger animate-float"></i>
                </div>
                <p class="text-center">Bu ilacı silmek istediğinizden emin misiniz?</p>
                <div class="alert alert-warning">
                    <i class="fas fa-info-circle me-2"></i>
                    <strong id="ilacName"></strong> kalıcı olarak silinecektir.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="fas fa-times me-1"></i>İptal
                </button>
                <form id="deleteForm" method="post" style="display: inline;">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i>Sil
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
function confirmDelete(id, name) {
    document.getElementById('ilacName').textContent = name;
    document.getElementById('deleteForm').action = '@Url.Action("IlacSil")/' + id;
    new bootstrap.Modal(document.getElementById('deleteModal')).show();
}

// Add entrance animations
document.addEventListener('DOMContentLoaded', function() {
    const rows = document.querySelectorAll('tbody tr');
    rows.forEach((row, index) => {
        row.style.animationDelay = `${index * 0.1}s`;
    });
});
</script> 
