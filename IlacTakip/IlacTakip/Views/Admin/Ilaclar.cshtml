                    <span>Dashboard</span>
                </a>
            </li>
            <li class="menu-item">
                <a href="@Url.Action("Ilaclar", "Admin")" class="menu-link active">
                    <i class="fas fa-pills menu-icon"></i>
                    <span>İlaçlar</span>
