@model IlacTakip.ViewModels.LoginViewModel

@{
    ViewData["Title"] = "Admin Girişi";
    Layout = null;
}

<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin Girişi - İlaç Takip Sistemi</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" />
    <style>
        :root {
            --primary-bg: #1a1a1a;
            --secondary-bg: #2d2d2d;
            --card-bg: #ffffff;
            --text-primary: #333333;
            --text-secondary: #666666;
            --text-muted: #999999;
            --border-color: #e0e0e0;
            --shadow-light: rgba(0, 0, 0, 0.1);
            --shadow-medium: rgba(0, 0, 0, 0.15);
            --shadow-heavy: rgba(0, 0, 0, 0.25);
            --accent-color: #333333;
            --hover-color: #555555;
        }

        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #e3e7eb 0%, #a8b5c4 100%);
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            position: relative;
            overflow: hidden;
        }

        /* Animated Background Elements */
        body::before {
            content: '';
            position: absolute;
            top: -50%;
            left: -50%;
            width: 200%;
            height: 200%;
            background: 
                radial-gradient(circle at 25% 25%, rgba(51, 51, 51, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 75% 75%, rgba(51, 51, 51, 0.03) 0%, transparent 50%);
            animation: rotate 20s linear infinite;
            z-index: 1;
        }

        @@keyframes rotate {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(30px);
            }
            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        @@keyframes slideInLeft {
            from {
                opacity: 0;
                transform: translateX(-50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes slideInRight {
            from {
                opacity: 0;
                transform: translateX(50px);
            }
            to {
                opacity: 1;
                transform: translateX(0);
            }
        }

        @@keyframes scaleIn {
            from {
                opacity: 0;
                transform: scale(0.8);
            }
            to {
                opacity: 1;
                transform: scale(1);
            }
        }

        @@keyframes bounce {
            0%, 20%, 53%, 80%, 100% {
                transform: translate3d(0,0,0);
            }
            40%, 43% {
                transform: translate3d(0, -15px, 0);
            }
            70% {
                transform: translate3d(0, -7px, 0);
            }
            90% {
                transform: translate3d(0, -2px, 0);
            }
        }

        @@keyframes pulse {
            0% {
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(51, 51, 51, 0.4);
            }
            70% {
                transform: scale(1.05);
                box-shadow: 0 0 0 10px rgba(51, 51, 51, 0);
            }
            100% {
                transform: scale(1);
                box-shadow: 0 0 0 0 rgba(51, 51, 51, 0);
            }
        }

        @@keyframes float {
            0%, 100% { transform: translateY(0px); }
            50% { transform: translateY(-10px); }
        }

        @@keyframes shimmer {
            0% { transform: translateX(-100%); }
            100% { transform: translateX(100%); }
        }

        @@keyframes glow {
            0%, 100% {
                box-shadow: 0 0 20px rgba(51, 51, 51, 0.3);
            }
            50% {
                box-shadow: 0 0 30px rgba(51, 51, 51, 0.6);
            }
        }

        /* Animation Classes */
        .animate-fadeInUp {
            animation: fadeInUp 0.8s ease;
        }

        .animate-slideInLeft {
            animation: slideInLeft 0.8s ease;
        }

        .animate-slideInRight {
            animation: slideInRight 0.8s ease;
        }

        .animate-scaleIn {
            animation: scaleIn 0.6s ease;
        }

        .animate-bounce {
            animation: bounce 1s ease;
        }

        .animate-pulse {
            animation: pulse 2s ease-in-out infinite;
        }

        .animate-float {
            animation: float 3s ease-in-out infinite;
        }

        .animate-glow {
            animation: glow 2s ease-in-out infinite;
        }

        .login-container {
            background: var(--card-bg);
            border-radius: 20px;
            box-shadow: 0 20px 60px var(--shadow-heavy);
            width: 100%;
            max-width: 550px;
            position: relative;
            z-index: 10;
            overflow: hidden;
            animation: scaleIn 0.8s ease;
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.1), transparent);
            animation: shimmer 3s ease-in-out infinite;
        }

        .login-container::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.4), transparent);
            animation: shimmer 2s infinite;
        }

        .login-header {
            background: var(--primary-bg);
            color: white;
            text-align: center;
            padding: 3rem 2.5rem 2rem;
            position: relative;
        }

        .login-header::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 50px;
            height: 3px;
            background: linear-gradient(90deg, transparent, #ffffff, transparent);
        }

        .login-icon {
            font-size: 3rem;
            margin-bottom: 1rem;
            animation: float 3s ease-in-out infinite, pulse 4s ease-in-out infinite;
            transition: transform 0.3s ease;
            color: var(--accent-color);
        }

        .login-icon:hover {
            transform: scale(1.1) rotate(5deg);
        }

        .login-title {
            font-size: 1.8rem;
            font-weight: 700;
            margin-bottom: 0.5rem;
            letter-spacing: 1px;
        }

        .login-subtitle {
            font-size: 0.95rem;
            opacity: 0.8;
            font-weight: 300;
        }

        .login-body {
            padding: 3rem 2.5rem;
        }

        .form-group {
            margin-bottom: 2rem;
            position: relative;
        }

        .form-label {
            display: block;
            margin-bottom: 0.75rem;
            font-weight: 600;
            color: var(--text-primary);
            font-size: 0.9rem;
            text-transform: uppercase;
            letter-spacing: 0.5px;
        }

        .form-control {
            width: 100%;
            padding: 1.25rem 1.25rem 1.25rem 3.5rem;
            border: 2px solid var(--border-color);
            border-radius: 12px;
            font-size: 1.1rem;
            transition: all 0.3s ease;
            background: #ffffff;
            color: var(--text-primary);
        }

        .form-control:focus {
            outline: none;
            border-color: var(--accent-color);
            box-shadow: 0 0 0 0.2rem rgba(51, 51, 51, 0.25);
            transform: translateY(-2px);
        }

        .input-icon {
            position: absolute;
            left: 1.25rem;
            top: 50%;
            transform: translateY(-50%);
            color: var(--text-muted);
            font-size: 1.2rem;
            z-index: 5;
        }

        .form-group input:focus + .input-icon {
            color: var(--accent-color);
        }

        .divider {
            text-align: center;
            margin: 2rem 0 1.5rem;
            position: relative;
        }

        .divider::before {
            content: '';
            position: absolute;
            top: 50%;
            left: 0;
            right: 0;
            height: 1px;
            background: linear-gradient(90deg, transparent, var(--border-color), transparent);
        }

        .divider span {
            background: white;
            padding: 0 1rem;
            color: var(--text-muted);
            font-size: 0.9rem;
        }

        .btn {
            width: 100%;
            padding: 1.25rem;
            background: var(--accent-color);
            color: white;
            border: none;
            border-radius: 12px;
            font-size: 1.1rem;
            font-weight: 600;
            cursor: pointer;
            transition: all 0.3s ease;
            text-transform: uppercase;
            letter-spacing: 1px;
            position: relative;
            overflow: hidden;
        }

        .btn::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255,255,255,0.2), transparent);
            transition: left 0.5s ease;
        }

        .btn:hover {
            background: var(--hover-color);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px var(--shadow-medium);
        }

        .btn:hover::before {
            left: 100%;
        }

        .btn:active {
            transform: translateY(-1px);
        }

        .alert {
            background: rgba(220, 53, 69, 0.1);
            color: #721c24;
            padding: 1rem 1.5rem;
            border-radius: 8px;
            margin-bottom: 1.5rem;
            border-left: 4px solid #dc3545;
            font-size: 0.9rem;
            animation: fadeInUp 0.5s ease;
        }

        .text-danger {
            color: #dc3545;
            font-size: 0.8rem;
            margin-top: 0.5rem;
            display: block;
        }

        /* Responsive Design */
        @@media (max-width: 480px) {
            .login-container {
                margin: 1rem;
                max-width: none;
            }
            
            .login-header {
                padding: 2.5rem 2rem 1.5rem;
            }
            
            .login-body {
                padding: 2.5rem 2rem;
            }
            
            .login-icon {
                font-size: 2.5rem;
            }
            
            .login-title {
                font-size: 1.5rem;
            }
        }

        /* Loading Animation */
        .loading {
            pointer-events: none;
            opacity: 0.7;
        }

        .loading::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 20px;
            height: 20px;
            border: 2px solid transparent;
            border-top: 2px solid white;
            border-radius: 50%;
            animation: spin 0.8s linear infinite;
        }

        @@keyframes spin {
            0% { transform: translate(-50%, -50%) rotate(0deg); }
            100% { transform: translate(-50%, -50%) rotate(360deg); }
        }
    </style>
</head>
<body>
    <div class="login-container">
        <div class="login-header">
            <div class="login-icon">
                <i class="fas fa-hospital"></i>
            </div>
            <h1 class="login-title">Admin Girişi</h1>
            <p class="login-subtitle">Eczane Takip Sistemi</p>
        </div>
        
        <div class="login-body">
            <form asp-action="Login" method="post" id="loginForm">
                <div asp-validation-summary="ModelOnly" class="alert"></div>
                
                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope me-2"></i>E-posta
                    </label>
                    <div style="position: relative;">
                        <input asp-for="Email" class="form-control" placeholder="E-posta adresinizi giriniz" />
                        <i class="fas fa-envelope input-icon"></i>
                    </div>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password" class="form-label">
                        <i class="fas fa-lock me-2"></i>Şifre
                    </label>
                    <div style="position: relative;">
                        <input asp-for="Password" type="password" class="form-control" placeholder="Şifrenizi giriniz" />
                        <i class="fas fa-lock input-icon"></i>
                    </div>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="divider">
                    <span><i class="fas fa-shield-alt me-2"></i>Güvenli Giriş</span>
                </div>

                <button type="submit" class="btn" id="loginBtn">
                    <i class="fas fa-sign-in-alt me-2"></i>Giriş Yap
                </button>
            </form>
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script>
        $(document).ready(function() {
            // Enhanced entrance animations
            setTimeout(function() {
                $('.login-header').addClass('animate-slideInLeft');
            }, 200);

            $('.form-group').each(function(index) {
                const $element = $(this);
                setTimeout(function() {
                    if (index % 2 === 0) {
                        $element.addClass('animate-slideInLeft');
                    } else {
                        $element.addClass('animate-slideInRight');
                    }
                }, 400 + (index * 150));
            });

            setTimeout(function() {
                $('.divider').addClass('animate-fadeInUp');
            }, 800);

            setTimeout(function() {
                $('#loginBtn').addClass('animate-bounce');
            }, 1000);

            // Form submission animation
            $('#loginForm').on('submit', function() {
                const btn = $('#loginBtn');
                btn.removeClass('animate-bounce');
                btn.addClass('loading animate-pulse');
                btn.html('<i class="fas fa-spinner fa-spin me-2"></i>Giriş yapılıyor...');
                
                // Add container shake on error (if needed)
                setTimeout(function() {
                    if ($('.alert').length > 0) {
                        $('.login-container').addClass('animate-bounce');
                    }
                }, 100);
            });

            // Enhanced input focus animations
            $('.form-control').on('focus', function() {
                $(this).parent().addClass('focused');
                $(this).closest('.form-group').addClass('animate-pulse');
            }).on('blur', function() {
                if (!$(this).val()) {
                    $(this).parent().removeClass('focused');
                }
                $(this).closest('.form-group').removeClass('animate-pulse');
            });

            // Icon hover effects
            $('.login-icon').on('mouseenter', function() {
                $(this).addClass('animate-bounce');
            }).on('mouseleave', function() {
                $(this).removeClass('animate-bounce');
            });

            // Button hover effects
            $('#loginBtn').on('mouseenter', function() {
                if (!$(this).hasClass('loading')) {
                    $(this).addClass('animate-glow');
                }
            }).on('mouseleave', function() {
                $(this).removeClass('animate-glow');
            });

            // Input typing effect
            $('.form-control').on('input', function() {
                $(this).closest('.form-group').addClass('animate-pulse');
                setTimeout(() => {
                    $(this).closest('.form-group').removeClass('animate-pulse');
                }, 300);
            });

            // Parallax effect on mouse move
            $(document).on('mousemove', function(e) {
                const mouseX = e.pageX;
                const mouseY = e.pageY;
                const centerX = $(window).width() / 2;
                const centerY = $(window).height() / 2;
                
                const deltaX = (mouseX - centerX) / centerX;
                const deltaY = (mouseY - centerY) / centerY;
                
                $('.login-container').css({
                    'transform': `translate(${deltaX * 5}px, ${deltaY * 5}px) scale(1)`
                });
            });
        });
    </script>
</body>
</html> 
