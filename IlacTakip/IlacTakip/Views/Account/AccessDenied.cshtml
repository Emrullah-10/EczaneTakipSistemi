@{
    ViewData["Title"] = "Erişim Reddedildi";
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-body text-center">
                <i class="fas fa-exclamation-triangle fa-4x text-warning mb-4"></i>
                <h2 class="text-danger mb-3">Erişim Reddedildi</h2>
                <p class="lead">Bu sayfaya erişim yetkiniz bulunmamaktadır.</p>
                <p class="text-muted">Lütfen farklı bir hesap ile giriş yapmayı deneyin veya sistem yöneticisi ile iletişime geçin.</p>
                
                <div class="mt-4">
                    <a asp-controller="Home" asp-action="Index" class="btn btn-primary me-2">
                        <i class="fas fa-home me-1"></i>Ana Sayfa
                    </a>
                    <a asp-controller="Account" asp-action="Login" class="btn btn-outline-primary">
                        <i class="fas fa-sign-in-alt me-1"></i>Giriş Yap
                    </a>
                </div>
            </div>
        </div>
    </div>
</div> 